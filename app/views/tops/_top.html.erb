<%- flash.each do |key, msg| -%>
  <div id="<%= key %>">
    <p style="float:right;"><%= link_to_function 'X', "Effect.Fade('#{key}')" %></p>
    <p><%= msg %></p>
    <div class="clear"></div>
  </div>
<%- end -%>

<li>
<%= top.name %>
<% if top.middles.any? %>
  <ul>
  <%= render top.middles %>
</ul>
<% end %>
</li>
